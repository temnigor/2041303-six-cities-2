{
  "name": "six-cities",
  "version": "1.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "start:dev": "npm run ts ./srt/main.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "mock:server": "json-server ./src/mocks/mock-server-data.json --port 3322"
  },
  "devDependencies": {
    "@types/convict": "^6.1.1",
    "@types/convict-format-with-validator": "^6.0.2",
    "@types/node": "^16.11.26",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-config-htmlacademy": "^5.1.2",
    "json-server": "^0.17.0",
    "pino-pretty": "^7.6.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "type": "module",
  "engines": {
    "node": "^16.13.0",
    "npm": "^8.1.0"
  },
  "dependencies": {
    "@types/got": "^9.6.12",
    "chalk": "^5.0.1",
    "convict": "^6.2.2",
    "convict-format-with-validator": "^6.2.0",
    "dotenv": "^16.0.0",
    "got": "^12.5.0",
    "inversify": "^6.0.1",
    "pino": "^7.10.0",
    "reflect-metadata": "^0.1.13"
  }
}
